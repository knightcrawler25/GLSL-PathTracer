Renderer
{
	rendererType Tiled
	resolution 900 900
	maxSamples 50
	maxDepth 4
	numTilesX 5
	numTilesY 5
	envMap ./assets/ajax/sunset.hdr
	hdrMultiplier 5.0
}

Camera
{
	position 0.0 0.5 -1.8
	lookAt 0 0.5 0.0
	fov 35
}

material silver
{
	color 1.0 1.0 1.0
	roughness 0.1
	metallic 1.0	
}

material gold
{
	color 1.0 0.71 0.29
	roughness 0.1
	metallic 1.0	
}

material redPlastic
{
	color 1.0 0.0 0.0
	roughness 0.01
	metallic 0.0
}

material white
{
	color 1.0 1.0 1.0
	roughness 0.01
	metallic 0.0
}

material black
{
	color 0.1 0.1 0.1
	roughness 0.01
	metallic 1.0
}

material glass
{
	color 1.0 1.0 1.0
	materialType 1.0
	ior 1.45
}

mesh
{
	file ./assets/ajax/ajax.obj
	material black
}
